<div style="font-family: 'Segoe UI', Arial, sans-serif; background: #1a1a2e; color: #e0e0e0; padding: 24px; border-radius: 12px; max-width: 640px; margin: 0 auto; box-sizing: border-box;">
  <!-- Feed header -->
  {{#if feedTitle}}
  <div style="margin-bottom: 20px; padding-bottom: 12px; border-bottom: 1px solid rgba(255,255,255,0.1);">
    <div style="font-size: 20px; font-weight: 600; color: #fff;">{{feedTitle}}</div>
    {{#if feedDescription}}
    <div style="font-size: 12px; opacity: 0.6; margin-top: 4px;">{{feedDescription}}</div>
    {{/if}}
  </div>
  {{/if}}

  <!-- Items list -->
  {{#each items}}
  <div style="display: flex; gap: 16px; padding: 16px 0; {{#unless @last}}border-bottom: 1px solid rgba(255,255,255,0.06);{{/unless}}">
    {{#if this.imageUrl}}
    <div style="flex-shrink: 0; width: 100px; height: 70px; border-radius: 8px; overflow: hidden; background: rgba(255,255,255,0.05);">
      <img src="{{this.imageUrl}}" alt="" style="width: 100%; height: 100%; object-fit: cover;" />
    </div>
    {{/if}}
    <div style="flex: 1; min-width: 0;">
      <div style="font-size: 15px; font-weight: 600; color: #fff; margin-bottom: 4px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{this.title}}</div>
      <div style="font-size: 13px; opacity: 0.7; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">{{this.description}}</div>
      {{#if this.pubDate}}
      <div style="font-size: 11px; opacity: 0.4; margin-top: 6px;">{{relativeTime this.pubDate}}</div>
      {{/if}}
    </div>
  </div>
  {{/each}}
</div>
