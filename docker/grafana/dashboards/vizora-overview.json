    {
      "id": 4,
      "title": "Recent Activity",
      "description": "Last 20 audit log entries across the platform",
      "type": "table",
      "datasource": {
        "type": "postgres",
        "uid": "${DS_POSTGRESQL}"
      },
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 6
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": {
              "type": "auto"
            },
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "action" },
            "properties": [
              { "id": "custom.width", "value": 100 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "entity_type" },
            "properties": [
              { "id": "custom.width", "value": 120 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "timestamp" },
            "properties": [
              { "id": "custom.width", "value": 180 }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "footer": {
          "show": false,
          "reducer": ["sum"],
          "countRows": false
        },
        "sortBy": []
      },
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "${DS_POSTGRESQL}"
          },
          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "SELECT\n  al.\"createdAt\" AS \"timestamp\",\n  al.action,\n  al.\"entityType\" AS \"entity_type\",\n  al.\"entityId\" AS \"entity_id\",\n  COALESCE(u.\"firstName\" || ' ' || u.\"lastName\", 'System') AS \"user\",\n  o.name AS \"organization\"\nFROM \"AuditLog\" al\nLEFT JOIN users u ON al.\"userId\" = u.id\nLEFT JOIN organizations o ON al.\"organizationId\" = o.id\nORDER BY al.\"createdAt\" DESC\nLIMIT 20;",
          "refId": "A"
        }
      ]
    },
