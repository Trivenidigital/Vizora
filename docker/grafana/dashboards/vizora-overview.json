  "panels": [
    {
      "id": 1,
      "title": "Device Status",
      "description": "Count of devices by status (online / offline / error)",
      "type": "stat",
      "datasource": {
        "type": "postgres",
        "uid": "${DS_POSTGRESQL}"
      },
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          },
          "mappings": [],
          "color": {
            "mode": "fixed"
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "online" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "offline" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "error" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }
            ]
          }
        ]
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "horizontal",
        "textMode": "auto",
        "wideLayout": true,
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "${DS_POSTGRESQL}"
          },
          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "SELECT\n  COALESCE(SUM(CASE WHEN status = 'online' THEN 1 ELSE 0 END), 0) AS \"online\",\n  COALESCE(SUM(CASE WHEN status = 'offline' THEN 1 ELSE 0 END), 0) AS \"offline\",\n  COALESCE(SUM(CASE WHEN status = 'error' THEN 1 ELSE 0 END), 0) AS \"error\"\nFROM devices;",
          "refId": "A"
        }
      ]
    },
