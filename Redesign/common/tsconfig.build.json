{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "declaration": true,
    "sourceMap": true,
    "noEmit": false,
    "emitDeclarationOnly": false
  },
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/**",
    "node_modules",
    "dist"
  ]
} 