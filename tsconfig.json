{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/App.tsx",
    "src/main.tsx",
    "src/contexts/**/*.tsx",
    "src/pages/**/*.tsx",
    "src/services/**/*.ts",
    "src/styles/**/*.css",
    "src/types/**/*.ts",
    "src/components/**/*.tsx",
    "src/utils/**/*.ts"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.*",
    "**/*.spec.*",
    "**/tests/**",
    "../common/src/**",
    "node_modules",
    "dist"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
} 