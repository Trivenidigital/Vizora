# Node Environment
NODE_ENV=development

# API Ports
API_PORT=3000
REALTIME_PORT=3001
WEB_PORT=3002

# CORS Origins
CORS_ORIGIN=http://localhost:3002,http://localhost:3000

# PostgreSQL - DATABASE_URL for Prisma
DATABASE_URL=postgresql://vizora_user:vizora_pass@localhost:5432/vizora
POSTGRES_URL=postgresql://vizora_user:vizora_pass@localhost:5432/vizora

# MongoDB
MONGODB_URL=mongodb://localhost:27017/vizora

# Redis
REDIS_URL=redis://localhost:6379

# MinIO / S3
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=vizora-assets
MINIO_USE_SSL=false

# JWT Authentication
JWT_SECRET=vizora-dev-secret-key-change-in-production-32chars
JWT_EXPIRES_IN=7d
DEVICE_JWT_SECRET=vizora-device-secret-key-change-in-production

# Logging
LOG_LEVEL=debug
