{
  "dashboard": {
    "title": "Vizora Realtime Service",
    "tags": ["vizora", "realtime", "websocket"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "title": "Active WebSocket Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(vizora_realtime_ws_connections_active)",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4}
      },
      {
        "title": "Total Devices Online",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(vizora_realtime_device_status == 1)",
            "legendFormat": "Online Devices"
          }
        ],
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4}
      },
      {
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(vizora_realtime_http_requests_total[1m]))",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4}
      },
      {
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(vizora_realtime_http_requests_total{status=~\"5..\"}[1m]))",
            "legendFormat": "Errors/sec"
          }
        ],
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.05, "color": "yellow"},
                {"value": 0.2, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "HTTP Request Latency (P95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(vizora_realtime_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95"
          }
        ],
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8}
      },
      {
        "title": "WebSocket Connection Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(vizora_realtime_ws_connections_total{status=\"connected\"}[5m])",
            "legendFormat": "Connections/sec"
          },
          {
            "expr": "rate(vizora_realtime_ws_connections_total{status=\"disconnected\"}[5m])",
            "legendFormat": "Disconnections/sec"
          }
        ],
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8}
      },
      {
        "title": "Heartbeat Success Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(vizora_realtime_heartbeat_total{success=\"true\"}[5m]) / rate(vizora_realtime_heartbeat_total[5m]) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8}
      },
      {
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory (MB)"
          }
        ],
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8}
      },
      {
        "title": "HTTP Requests by Status",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(vizora_realtime_http_requests_total[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8}
      },
      {
        "title": "Content Errors by Type",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(vizora_realtime_content_errors_total[5m])) by (error_type)",
            "legendFormat": "{{error_type}}"
          }
        ],
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8}
      }
    ]
  }
}
