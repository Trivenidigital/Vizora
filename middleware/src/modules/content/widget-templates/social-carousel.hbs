<div style="font-family: 'Segoe UI', Arial, sans-serif; background: #1a1a2e; color: #e0e0e0; padding: 24px; border-radius: 12px; overflow: hidden; box-sizing: border-box;">
  <!-- Profile header -->
  <div style="display: flex; align-items: center; gap: 14px; margin-bottom: 20px;">
    {{#if profileImage}}
    <img src="{{profileImage}}" alt="" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" />
    {{/if}}
    {{#if pageImage}}
    <img src="{{pageImage}}" alt="" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" />
    {{/if}}
    <div>
      <div style="font-size: 15px; font-weight: 600; color: #fff;">{{#if username}}{{username}}{{else}}{{pageName}}{{/if}}</div>
      <div style="font-size: 11px; opacity: 0.5; text-transform: capitalize;">{{platform}}</div>
    </div>
  </div>

  <!-- Carousel track -->
  <div style="display: flex; gap: 16px; overflow-x: auto; scroll-snap-type: x mandatory; -webkit-overflow-scrolling: touch; padding-bottom: 8px;">
    {{#each posts}}
    <div style="flex: 0 0 300px; scroll-snap-align: start; background: rgba(255,255,255,0.05); border-radius: 12px; overflow: hidden;">
      {{#if this.imageUrl}}
      <div style="width: 300px; height: 200px; overflow: hidden;">
        <img src="{{this.imageUrl}}" alt="" style="width: 100%; height: 100%; object-fit: cover;" />
      </div>
      {{/if}}
      <div style="padding: 14px;">
        {{#if this.text}}
        <div style="font-size: 13px; margin-bottom: 10px; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">{{this.text}}</div>
        {{/if}}
        {{#if this.caption}}
        <div style="font-size: 13px; margin-bottom: 10px; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">{{this.caption}}</div>
        {{/if}}
        <div style="display: flex; gap: 16px; font-size: 12px; opacity: 0.6;">
          {{#if this.likes}}<span>&#10084; {{this.likes}}</span>{{/if}}
          {{#if this.comments}}<span>&#128172; {{this.comments}}</span>{{/if}}
          {{#if this.shares}}<span>&#8634; {{this.shares}}</span>{{/if}}
          {{#if this.retweets}}<span>&#8634; {{this.retweets}}</span>{{/if}}
        </div>
        {{#if this.timestamp}}
        <div style="font-size: 11px; opacity: 0.4; margin-top: 8px;">{{relativeTime this.timestamp}}</div>
        {{/if}}
      </div>
    </div>
    {{/each}}
  </div>
</div>
