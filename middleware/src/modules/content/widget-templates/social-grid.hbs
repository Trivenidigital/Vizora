<div style="font-family: 'Segoe UI', Arial, sans-serif; background: #1a1a2e; color: #e0e0e0; padding: 24px; border-radius: 12px; box-sizing: border-box;">
  <!-- Profile header -->
  <div style="display: flex; align-items: center; gap: 14px; margin-bottom: 20px; padding-bottom: 16px; border-bottom: 1px solid rgba(255,255,255,0.08);">
    {{#if profileImage}}
    <img src="{{profileImage}}" alt="" style="width: 48px; height: 48px; border-radius: 50%; object-fit: cover;" />
    {{/if}}
    {{#if pageImage}}
    <img src="{{pageImage}}" alt="" style="width: 48px; height: 48px; border-radius: 50%; object-fit: cover;" />
    {{/if}}
    <div>
      <div style="font-size: 16px; font-weight: 600; color: #fff;">{{#if username}}{{username}}{{else}}{{pageName}}{{/if}}</div>
      <div style="font-size: 12px; opacity: 0.5; text-transform: capitalize;">{{platform}}</div>
    </div>
  </div>

  <!-- Post grid -->
  <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 4px;">
    {{#each posts}}
    <div style="position: relative; width: 100%; padding-top: 100%; background: rgba(255,255,255,0.05); border-radius: 4px; overflow: hidden;">
      {{#if this.imageUrl}}
      <img src="{{this.imageUrl}}" alt="" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;" />
      {{/if}}
      <!-- Hover overlay -->
      <div style="position: absolute; bottom: 0; left: 0; right: 0; background: linear-gradient(transparent, rgba(0,0,0,0.7)); padding: 8px; font-size: 11px;">
        <span style="margin-right: 8px;">&#10084; {{this.likes}}</span>
        {{#if this.comments}}<span>&#128172; {{this.comments}}</span>{{/if}}
        {{#if this.shares}}<span>&#8634; {{this.shares}}</span>{{/if}}
      </div>
    </div>
    {{/each}}
  </div>
</div>
