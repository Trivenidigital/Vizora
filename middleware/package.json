{
  "name": "@vizora/middleware",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "db:test:start": "docker-compose -f ../docker-compose.test.yml up -d",
    "db:test:stop": "docker-compose -f ../docker-compose.test.yml down",
    "db:test:reset": "cross-env NODE_ENV=test pnpm exec prisma migrate reset --force --skip-generate",
    "db:test:push": "cross-env NODE_ENV=test pnpm exec prisma db push --skip-generate",
    "db:test:seed": "cross-env NODE_ENV=test ts-node prisma/seed.ts",
    "test:e2e": "cross-env NODE_ENV=test jest --config=jest.e2e.config.js --runInBand",
    "test:e2e:cov": "cross-env NODE_ENV=test jest --config=jest.e2e.config.js --coverage --runInBand",
    "test:e2e:setup": "pnpm db:test:start && sleep 3 && pnpm db:test:push",
    "test:e2e:full": "pnpm test:e2e:setup && pnpm test:e2e:cov && pnpm db:test:stop",
    "test:all": "pnpm test:cov && pnpm test:e2e:cov"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ],
          "cwd": "middleware"
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/middleware/dist/package.json",
          "{workspaceRoot}/middleware/dist/pnpm-lock.yaml"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/middleware/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@vizora/middleware:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@vizora/middleware:build:development"
          },
          "production": {
            "buildTarget": "@vizora/middleware:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "11",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/mongoose": "^11.0.4",
    "@nestjs/passport": "11",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.5.0",
    "@sentry/nestjs": "^10.37.0",
    "@vizora/database": "workspace:*",
    "axios": "^1.7.0",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.67.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "cron-parser": "^5.5.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "isomorphic-dompurify": "^2.35.0",
    "minio": "^8.0.6",
    "mongoose": "^9.1.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "razorpay": "^2.9.6",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "sharp": "^0.34.5",
    "stripe": "^20.3.1",
    "tslib": "^2.3.0",
    "uuid": "^13.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.12",
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/dompurify": "^3.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.1.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/qrcode": "^1.5.6",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^11.0.0",
    "cross-env": "^10.1.0",
    "csurf": "^1.11.0",
    "jest": "^29.7.0",
    "supertest": "^7.2.2",
    "ts-jest": "29",
    "ts-node": "^10.9.2"
  }
}
