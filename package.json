{
  "name": "vizora-web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --noEmit",
    "build:js": "babel src --extensions \".ts,.tsx\" --out-dir dist --copy-files",
    "clean-build": "tsc --skipLibCheck --noEmit --incremental false && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:critical": "jest --selectProjects critical",
    "test:optimized": "jest --selectProjects optimized",
    "start": "node src/server.js",
    "test:minimal": "jest tests/minimal.test.js --testEnvironment=node --setupFilesAfterEnv=[]",
    "list": "node scripts/dev.js list",
    "generate": "node scripts/dev.js generate",
    "parse-prd": "node scripts/dev.js parse-prd"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@tanstack/react-query": "^4.36.1",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.0",
    "socket.io-client": "^4.7.2",
    "tailwind-merge": "^2.1.0",
    "winston": "^3.17.0",
    "lucide-react": "^1.0.0",
    "qrcode.react": "^2.0.0",
    "@anthropic-ai/sdk": "^0.39.0",
    "boxen": "^8.0.1",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cli-table3": "^0.6.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "fastmcp": "^1.20.5",
    "figlet": "^1.8.0",
    "fuse.js": "^7.0.0",
    "gradient-string": "^3.0.0",
    "helmet": "^8.1.0",
    "inquirer": "^12.5.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.2.0",
    "openai": "^4.89.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jest": "^29.7.0",
    "jsdom": "^23.0.1",
    "mongodb-memory-server": "^10.1.4",
    "msw": "^2.7.3",
    "nodemon": "^3.1.9",
    "postcss": "^8.4.31",
    "supertest": "^7.1.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2",
    "vite": "^5.4.16",
    "vitest": "^0.34.6"
  },
  "jest": {
    "projects": [
      {
        "displayName": "critical",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
          "./tests/setup.js"
        ],
        "testMatch": [
          "**/tests/auth-token-simple.test.js",
          "**/tests/auth/**/*.test.js",
          "**/tests/core/**/*.test.js"
        ]
      },
      {
        "displayName": "optimized",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
          "./tests/setup.js"
        ],
        "testMatch": [
          "**/tests/auth-token-simple.test.js",
          "**/tests/auth/**/*.test.js",
          "**/tests/core/**/*.test.js",
          "**/tests/media/**/*.test.js",
          "**/tests/services/**/*.test.js",
          "**/tests/performance/**/*.test.js"
        ]
      }
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "roots": [
      "<rootDir>/tests",
      "<rootDir>/src"
    ],
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}