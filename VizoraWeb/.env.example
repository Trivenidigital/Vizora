# Vizora Configuration Example
# Copy this file to .env, .env.local, or .env.development.local to customize the configuration

# Middleware Connection Settings
# -----------------------------

# Option 1: Specify multiple middleware URLs directly (comma-separated)
# This is the most explicit way to configure the URLs
VITE_WEBSOCKET_URLS=http://localhost:3003,http://localhost:3789

# Option 2: Specify individual ports (used if WEBSOCKET_URLS is not set)
# The app will construct URLs using the current hostname with these ports
VITE_MIDDLEWARE_PORT=3003
VITE_FALLBACK_MIDDLEWARE_PORT=3789

# API Configuration
# -----------------------------
VITE_API_URL=http://localhost:3003/api
VITE_WS_URL=http://localhost:3003

# Feature Flags
# -----------------------------
# Enable/disable experimental features
VITE_ENABLE_CONTENT_LIBRARY=true
VITE_ENABLE_ANALYTICS=false 