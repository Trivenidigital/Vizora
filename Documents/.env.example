# Node Environment
NODE_ENV=development

# API Ports
API_PORT=3000
REALTIME_PORT=3001
WEB_PORT=3002

# CORS Origins (comma-separated)
CORS_ORIGIN=http://localhost:3002,http://localhost:3000

# PostgreSQL
POSTGRES_URL=postgresql://vizora_user:vizora_pass@localhost:5432/vizora
# Database connection pooling (production: 10, dev: unlimited)
DATABASE_URL=${POSTGRES_URL}?connection_limit=10&pool_timeout=20

# MongoDB
MONGODB_URL=mongodb://localhost:27017/vizora

# Redis
REDIS_URL=redis://localhost:6379

# MinIO / S3
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=vizora-assets
MINIO_USE_SSL=false

# ClickHouse
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=default

# JWT Authentication
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d
DEVICE_JWT_SECRET=your-device-jwt-secret-change-this-in-production-min-32-chars

# Password Security
# Bcrypt rounds (OWASP 2025+ recommendation: 14+)
BCRYPT_ROUNDS=14

# Clerk (Optional - if using Clerk for auth)
CLERK_SECRET_KEY=
CLERK_PUBLISHABLE_KEY=
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Realtime Gateway
REALTIME_URL=http://localhost:3001
REALTIME_WS_URL=ws://localhost:3001

# Email (Optional - for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@vizora.com
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@vizora.com

# Sentry (Optional - Error Tracking)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# File Upload Limits
MAX_FILE_SIZE=104857600
MAX_VIDEO_SIZE=524288000

# Session
SESSION_SECRET=your-session-secret-change-this-in-production
