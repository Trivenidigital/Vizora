# Server Configuration
PORT=3003
NODE_ENV=production

# CORS Settings
# Comma-separated list of allowed origins, empty/undefined or '*' for all origins
ALLOWED_ORIGINS=http://localhost:5174
DEBUG_CORS=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS_ENABLED=false
REDIS_KEY_PREFIX=vizora:
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_KEEP_ALIVE=30000

# Redis Commander (Monitoring)
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/vizora

# WebSocket Configuration
WS_PATH=/socket.io

# Cluster and Session Management
NODE_ID=node_1
SESSION_TTL=86400  # 24 hours in seconds
RECONNECTION_TOKEN_TTL=3600  # 1 hour in seconds

# Monitoring
MONITORING_ENABLED=true
MONITORING_INTERVAL=60000  # 60 seconds

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000  # 1 minute in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_INTERVAL=60000  # 1 minute
MAX_CONNECTIONS_PER_NODE=1000

# Cluster Configuration
CLUSTER_ENABLED=false
CLUSTER_HEARTBEAT_INTERVAL=5000

# JWT Secret
JWT_SECRET=your-secret-key-here 