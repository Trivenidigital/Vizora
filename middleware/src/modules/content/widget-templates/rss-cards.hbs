<div style="font-family: 'Segoe UI', Arial, sans-serif; background: #1a1a2e; color: #e0e0e0; padding: 24px; border-radius: 12px; box-sizing: border-box;">
  <!-- Feed header -->
  {{#if feedTitle}}
  <div style="margin-bottom: 20px;">
    <div style="font-size: 20px; font-weight: 600; color: #fff;">{{feedTitle}}</div>
  </div>
  {{/if}}

  <!-- Card grid -->
  <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(260px, 1fr)); gap: 16px;">
    {{#each items}}
    <div style="background: rgba(255,255,255,0.05); border-radius: 12px; overflow: hidden; display: flex; flex-direction: column;">
      {{#if this.imageUrl}}
      <div style="width: 100%; height: 160px; overflow: hidden; background: rgba(255,255,255,0.03);">
        <img src="{{this.imageUrl}}" alt="" style="width: 100%; height: 100%; object-fit: cover;" />
      </div>
      {{/if}}
      <div style="padding: 16px; flex: 1; display: flex; flex-direction: column;">
        <div style="font-size: 15px; font-weight: 600; color: #fff; margin-bottom: 8px; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">{{this.title}}</div>
        <div style="font-size: 13px; opacity: 0.7; flex: 1; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">{{this.description}}</div>
        {{#if this.pubDate}}
        <div style="font-size: 11px; opacity: 0.4; margin-top: 12px;">{{relativeTime this.pubDate}}</div>
        {{/if}}
      </div>
    </div>
    {{/each}}
  </div>
</div>
